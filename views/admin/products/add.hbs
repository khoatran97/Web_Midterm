{{#section 'a_js'}}
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        $("#btnSub").click(function(e){
            e.preventDefault();
            swal({
              title: "Bạn đã chắc chắn?",
              text: "Bạn có thực sự muốn thay đổi thông tin này?",
              icon: "warning",
              buttons: true,
              dangerMode: true,
            })
            .then((willUpdate) => {
              if (willUpdate) {
                  if($('#txtName').val().length!=0){
                    $('#eForm').submit();
                }else{
                    swal("Cảnh báo!", "Hãy điền đầy đủ thông tin trước khi nhấn cập nhật!", "warning");
                }
              }
            });
        });
    </script>
{{/section}}

<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">Thêm sản phẩm</h3>
                </div>
