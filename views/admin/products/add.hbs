                                            <label>Thương hiệu</label>
                                            <input type="number" class="form-control" value="" placeholder="Mã thương hiệu" name="" id="txtName">
                                        </div>
                                        <div class="form-group">
                                            <label>Xuất xứ</label>
                                            <input type="text" class="form-control" value="" placeholder="Nơi xuất xứ" name="" id="txtName">
                                        </div>
                                        <div class="form-group">
                                            <label>Giá sản phẩm</label>
                                            <input type="number" class="form-control" value="" placeholder="Giá" name="" id="txtName">
                                        </div>
