{{#section 'a_title'}}
    Quản lý đơn hàng
{{/section}}

{{#section 'a_css'}}
{{/section}}

{{#section 'a_js'}}
{{/section}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12" id="title">
            <h1 class="page-header">Đơn hàng</h1>
        </div>
    </div>

    {{#if noItem}}
        <div class="alert alert-warning">
            <strong>Hiện chưa có đơn hàng nào!</strong>
        </div>
    {{/if}}
    <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Mã đơn hàng</th>
                                        <th>Mã khách hàng</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {{#each orders}}
                                    <tr class="odd gradeX">
                                        <td>{{madon}}</td>
                                        <td>{{makhach}}</td>
                                        <td class="text-center">
                                            <a class="btn btn-danger btn-xs" href="admin/orders/delete?id={{madon}}" role="button">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </a>
                                            <a class="btn btn-primary btn-xs" href="admin/orders/edit?id={{madon}}" role="button">
                                                <span class="glyphicon glyphicon-wrench"></span>
                                            </a>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
</div>