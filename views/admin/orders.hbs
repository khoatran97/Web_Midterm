{{#section 'a_title'}}
    Quản lý đơn hàng
{{/section}}

{{#section 'a_css'}}
{{/section}}

{{#section 'a_js'}}
    <script>
        $('#myTable tr').each(function(){
            var status = $(this).find('td:eq(3)').html();
            var ct=$(this).find('td:eq(0)').text();
            if(status === "chưa giao"){
                $(this).css("color", "red");
                $(this).find('td:eq(0)').html('<a href="/admin/orders/edit?id='+ct+'"><img src="/admin/image/notyet.png" alt="">  '+ct+'</a>');
            }
            else if(status === "đang giao"){
                $(this).css("color", "blue");
                $(this).find('td:eq(0)').html('<a href="/admin/orders/edit?id='+ct+'"><img src="/admin/image/shipping.png" alt="">  '+ct+'</a>');
            }
            else if(status === "đã giao"){
                $(this).css("color", "green");
                $(this).find('td:eq(0)').html('<a href="/admin/orders/edit?id='+ct+'"><span class="glyphicon glyphicon-ok"></span>  '+ct+'</a>');
            }
        })
    </script>
{{/section}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12" id="title">
            <h1 class="page-header">Đơn hàng</h1>
        </div>
    </div>

    {{#if noItem}}
        <div class="alert alert-warning">
            <strong>Hiện chưa có đơn hàng nào!</strong>
        </div>
    {{/if}}
    <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="myTable">
                                <thead>
                                    <tr>
                                        <th class="text-center">Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Tổng tiền</th>
                                        <th class="text-center">Tình trạng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {{#each orders}}
                                    <tr class="odd gradeX">
                                        <td class="text-center"><a href="/admin/orders/edit?id={{madon}}">{{madon}}</a></td>
                                        <td>{{ngaydat}}</td>
                                        <td>{{tonggiatri}}</td>
                                        <td class="text-center">{{trangthai}}</td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
</div>