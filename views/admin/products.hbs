
{{#section 'a_title'}}
    Admin/Quản lý loại sản phẩm
{{/section}}

{{#section 'a_css'}}
{{/section}}

{{#section 'a_js'}}
{{/section}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sản phẩm</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {{#if noItem}}
        <div class="alert alert-warning">
            <strong>Hiện chưa có sản phẩm nào!</strong> Hãy nhấn <strong>Thêm</strong> để bổ sung!
        </div>
    {{/if}}
    <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {{#each products}}
                                    <tr class="odd gradeX">
                                        <td>{{masanpham}}</td>
                                        <td>{{tensanpham}}</td>
                                        <td class="text-center">
                                            <a class="btn btn-danger btn-xs" href="admin/products/delete?id={{masanpham}}" role="button">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </a>
                                            <a class="btn btn-primary btn-xs" href="admin/products/edit?id={{masanpham}}" role="button">
                                                <span class="glyphicon glyphicon-wrench"></span>
                                            </a>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
</div>
<!-- /#page-wrapper -->
    