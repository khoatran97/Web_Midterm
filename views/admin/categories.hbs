{{#section 'a_title'}}
    Quản lý loại sản phẩm
{{/section}}

{{#section 'a_css'}}
{{/section}}

{{#section 'a_js'}}
{{/section}}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12" id="title">
            <h1 class="page-header">Loại sản phẩm</h1>
        </div>
    </div>
    {{#if noItem}}
        <div class="alert alert-warning">
            <strong>Hiện chưa có loại sản phẩm nào!</strong> Hãy nhấn <strong>Thêm</strong> để bổ sung!
        </div>
    {{/if}}
    <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Mã loại</th>
                    <th>Tên loại</th>
                    <th>Tác vụ</th>
                </tr>
            </thead>
            <tbody>
            {{#each categories}}
                <tr class="odd gradeX">
                    <td>{{maloai}}</td>
                    <td>{{tenloai}}</td>
                    <td class="text-center">
                        <a class="btn btn-danger btn-xs" href="admin/categories/delete?id={{maloai}}" role="button">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                        <a class="btn btn-primary btn-xs" href="admin/categories/edit?id={{maloai}}" role="button">
                            <span class="glyphicon glyphicon-wrench"></span>
                        </a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div><!-- /.page-wrapper -->