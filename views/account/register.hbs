{{#if success}}
<div class="alert alert-success">
  <strong>Đăng ký thành công!</strong> Chúc bạn có được trải nghiệm mua sắm vui vẻ tại iBags.
  <br>
  <a href="/" class="alert-link">Về trang chủ</a>.
</div>
{{/if}}
{{#if fail}}
<div class="alert alert-danger">
  <strong>Đăng ký thất bại!</strong> Vui lòng thử lại.
</div>
{{/if}}
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Đăng ký</title>
        <link href="/bootstrap-4.1.0-dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script>
            $(document).ready(function(){
                $('#txtDOB').datepicker({
                    format: 'd/m/yyyy',
                    autoclose: true
                });
                
                $('#warning-pass').hide();
                $('#warning').hide();
                $('#warning-email').hide();
                $('#warning-dob').hide();
            });
            function validate() {
                if ($('#txtUsername').val().length === 0 || $('#txtPWD').val().length === 0 ||$('#txtrePWD').val().length ===0){
                    $('#warning').show();
                    return false;
                }
                if ($('#txtPWD').val() !== $('#txtrePWD').val()) {
                    $('#warning-pass').show();
                    return false;
                }
                var dateString = document.getElementById('txtDOB').value;
                var myDate = new Date(dateString);
                var today = new Date();
                if ( myDate > today ) { 
                    $('#warning-dob').show();
                    return false;
                }
                return true;
            }
        </script>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-12" style="text-align: center; color: blue; font-size: 40px;">ĐĂNG KÝ</div>
            </div>
            <br>
            <div class="col-sm-12" id="warning" style="color: red; text-align: center;">Bạn không được bỏ trống bất cứ ô nào</div>
            <form action="" method="POST" class="form-horizontal" role="form" onsubmit="return validate();">
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <label for="txtUsername" class="control-label col-sm-2">Tên đăng nhập</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="txtUsername" placeholder="Tên đăng nhập" name="username">
                    </div>
                    {{#if matched}}
                        <div style="color: red;"><i class="fa fa-remove"></i> Tên đăng nhập đã tồn tại</div>
                    {{/if}}
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <label for="txtName" class="control-label col-sm-2">Họ tên</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="txtName" placeholder="Họ tên" name="name">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <label for="txtPWD" class="control-label col-sm-2">Mật khẩu</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="txtPWD" placeholder="Mật khẩu" name="password">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <label for="txtrePWD" class="control-label col-sm-2">Nhập lại mật khẩu</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" id="txtrePWD" placeholder="Nhập lại mật khẩu" name="repassword">
                    </div>
                    <div id="warning-pass" style="color: red;"><i class="fa fa-remove"></i> Mật khẩu không khớp</div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <label for="txtTel" class="control-label col-sm-2">Số điện thoại</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" id="txTel" placeholder="Số điện thoại" name="tel">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <label for="txtEmail" class="control-label col-sm-2">Email</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="txtEmail" placeholder="Email" name="email">
                    </div>
                    <div id="warning-email" style="color: red;"><i class="fa fa-remove"></i> Email không hợp lệ</div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <label for="txtDOB" class="col-sm-2 control-label">Ngày sinh</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="txtDOB" placeholder="d/m/yyyy" name="dob">
                    </div>
                    <div id="warning-dob" style="color: red;"><i class="fa fa-remove"></i> Ngày sinh không hợp lệ</div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <label for="txtAddress" class="control-label col-sm-2">Địa chỉ</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="txtAddress" placeholder="Địa chỉ" name="address">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <label for="txtGender" class="control-label col-sm-2">Giới tính</label>
                    <div class="col-sm-4">
                        <div class="radio-inline"><input type="radio" name="gender" value="0" checked> Nam<br></div>
                        <div class="radio-inline"><input type="radio" name="gender" value="1"> Nữ<br></div>
                    </div>
                </div>
                <div class="g-recaptcha" data-sitekey="6Lfye1wUAAAAAN3jahV8i1hdE22MIcRD8tQgFFmn"></div>
                <br/>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10 col-sm-offset-2">
                        <button type="submit" class="btn btn-success">
                            Đăng ký
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <script src="/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
        <script src='https://www.google.com/recaptcha/api.js'></script>
        <script src="/jquery-3.3.1.min.js"/>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"/>
    </body>
</html>