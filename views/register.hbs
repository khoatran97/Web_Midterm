<html>
    <head>
        <meta charset="utf-8"/>
        <title>Đăng ký</title>
        <link href="/bootstrap-4.1.0-dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    <div class="text-center mb-4">
                        <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
                        <br/>
                        <span class="h3 mb-3 font-weight-normal">Đăng ký</span>
                        <span class="h6 mb-3 font-weight-normal">&nbsp;|&nbsp; <a href="login">Đăng nhập</a></span>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">@</span>
                        </div>
                        <input type="text" class="form-control" id="usernameInput" placeholder="Tên đăng nhập" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="nameInput" placeholder="Họ và tên">
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" id="passwordInput" placeholder="Mật khẩu">
                        <input type="password" class="form-control" id="password2Input" placeholder="Xác nhận mật khẩu">
                    </div>
                    <div class="form-group">
                        <div class="g-recaptcha" data-sitekey="6LfXmFIUAAAAAC2WdazsATnNCqtQY4EC8j-OhV5_"></div>
                    </div>
                    <br/>
                    <br/>
                    <div class="text-center">
                    <div class="form-group">
                        <button class="btn btn-primary btn-block col-md-12" type="submit">Đăng ký</button>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-outline-primary btn-sm col-md-5"><img width="18" height="18" src="/guestPages/images/facebook.svg">&nbsp; Tiếp tục với Facebook</button>
                        <button type="button" class="btn btn-outline-danger btn-sm col-md-5"><img width="18" height="18" src="/guestPages/images/google.svg">&nbsp; Tiếp tục với Google</button>
                    </div>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
            </div>
        </div>

        <script src='https://www.google.com/recaptcha/api.js'></script>
        <script src="/jquery-3.3.1.min.js"/>
        <script src="/bootstrap-4.1.0-dist/js/bootstrap.min.js"/>
    </body>
</html>